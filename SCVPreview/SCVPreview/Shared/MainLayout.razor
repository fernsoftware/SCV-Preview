@inherits LayoutComponentBase

<header>
    <div class="ui container">
        <div id="div-menu" class="ui top attached borderless inverted menu">
            <div class="header item">
                <img class="ui tiny image" src="https://fernsoftware.com/img/abacus_white_trans.png" alt="">
            </div>
            <div class="item">
                <h2 class="ui inverted header">
                    Fern Software
                    <div class="sub header">SCV Preview</div>
                </h2>
            </div>
            <div class="right menu">
                <div class="item">
                    <a class="ui labeled icon button" href="https://github.com/fernsoftware/">
                        <i class="github icon"></i>
                        Fern Software
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>

<div id="main">
    <div class="ui container">
        <div class="ui secondary pointing menu">
            <div class="item">
                <img class="ui tiny image" src="https://fernsoftware.com/img/logo.png" alt="">
            </div>
        </div>
        <div class="ui stackable grid">
            <div class="twelve wide column">
                @Body
            </div>
            <div class="four wide computer only column">
                <div class="ui vertical fluid large menu">
                    <div class="item">
                        <div class="header">Resources</div>
                        <div class="menu">
                            <a class="item" href="https://fernsoftware.com">Fern Software</a>
                            <a class="item" href="https://www.github.com/fernsoftware">GitHub</a>
                            <a class="item" href="https://fernsoftware.com/contact">Contact</a>
                        </div>
                    </div>
                </div>
                <div class="ui message">
                    <div class="header">
                        About this app
                    </div>
                    <p>This app was created by Fern Software to help our customers prepare and understand their Single-Customer-View files. You can read more about SCV from <a href="https://www.fscs.org.uk/industry-resources/single-customer-view/">FSCS</a>.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<footer>
    <div class="ui container">
        <div class="ui center aligned grid">
            <div class="ui three column row">
                <div class="middle aligned left aligned column">
                    &copy; @DateTime.UtcNow.Year Fern Software, All rights reserved.
                </div>
                <div class="column">
                    <img class="ui image" src="https://fernsoftware.com/img/logo.png" alt="">
                </div>
                <div class="middle aligned column">
                    <div class="ui text right floated menu">
                        <a class="item" asp-controller="Company" asp-action="Privacy">Privacy</a>
                        <a class="item" asp-controller="Support" asp-action="Index">Support</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
